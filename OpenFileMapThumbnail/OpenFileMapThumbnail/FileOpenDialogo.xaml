<Window x:Class="OpenFileMapThumbnail.FileOpenDialogo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open File" Height="560" Width="820"
        WindowStartupLocation="CenterOwner"
        Background="#101012">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <DockPanel Grid.Row="0" LastChildFill="True">
            <TextBlock Text="📁 Path:" Foreground="#EEE" FontSize="16"
                       VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="FolderBox" MinWidth="500"
                     Background="#1e1e1e" Foreground="#DDD"
                     BorderBrush="#333" BorderThickness="1"
                     Height="28" Padding="6,2"
                     VerticalContentAlignment="Center"/>
            <Button Content="Up" Width="60" Height="28"
                    Margin="8,0,0,0" Click="Up_Click"/>
            <Button Content="Refresh" Width="80" Height="28"
                    Margin="8,0,0,0" Click="Refresh_Click"/>
        </DockPanel>

        <!-- Main image tiles -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="TilePanel" Orientation="Horizontal"/>
        </ScrollViewer>

        <!-- Footer -->
        <DockPanel Grid.Row="2" Margin="0,12,0,0">
            <TextBlock x:Name="CountText" Foreground="#BBB"
                       VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Open" Width="100" Margin="6,0"
                        Click="Ok_Click" IsDefault="True"/>
                <Button Content="Cancel" Width="100" Margin="6,0"
                        Click="Cancel_Click" IsCancel="True"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
